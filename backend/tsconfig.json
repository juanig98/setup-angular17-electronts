{
    "compilerOptions": {
        "outDir": "./build",
        "target": "ES2022",
        "module": "commonjs",
        "types": [
            "node"
        ],
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": true,
        "noImplicitAny": false,
      
    },
    "files": [
        "main.ts"
    ],
    "include": [
        "src/**/*.d.ts"
    ],
    "exclude": [
        "node_modules",
        "baks",
        "build"
    ],
}